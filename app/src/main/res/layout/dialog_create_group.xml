<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <EditText
        android:id="@+id/group_name_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_group_name" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_name_text"
        android:hint="@string/dialog_password" />

    <CheckBox
        android:id="@+id/has_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/group_name_text"
        android:layout_alignEnd="@+id/password_text"
        android:checked="false" />

</RelativeLayout>